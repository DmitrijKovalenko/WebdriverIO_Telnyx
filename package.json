{
  "name": "WebdriverIO_Telnyx",
  "type": "module",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/cli": "^9.18.4",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "@wdio/types": "^9.16.2",
    "allure-commandline": "^2.34.1",
    "cross-env": "^10.0.0",
    "wdio-wait-for": "^3.1.0"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.ts",
    "test": "wdio run wdio.conf.js",
    "test:chrome": "cross-env BROWSER=chrome wdio run wdio.chrome.conf.js",
    "test:firefox": "cross-env BROWSER=firefox wdio run wdio.firefox.conf.js",
    "test:single": "wdio run wdio.conf.js --spec test/specs/login.e2e.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "test:heap": "node --max-old-space-size=8192 ./node_modules/@wdio/cli/bin/wdio.js run wdio.conf.js",
    "test:login": "npm run test:heap -- --spec \"test/specs/Login.e2e.ts\"",
    "test:reset": "npm run test:heap -- --spec \"test/specs/PasswordReset.e2e.ts\"",
    "test:social": "npm run test:heap -- --spec \"test/specs/SocialMedia.e2e.ts\"",
    "test:signUp": "npm run test:heap -- --spec \"test/specs/SignUp.e2e.ts\""
  }
}
